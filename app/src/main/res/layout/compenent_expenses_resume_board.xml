<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/Widget.Material3.CardView.Filled"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/all_default_layout_offset_4">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/all_default_layout_offset_8">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/text_view_month_year_reference"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="@dimen/text_size_16"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="MARÇO/2022" />

        <com.google.android.material.divider.MaterialDivider
            android:id="@+id/divider"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/all_default_layout_offset_4"
            android:layout_marginHorizontal="2dp"
            app:dividerInsetEnd="@dimen/all_default_layout_offset_4"
            app:dividerInsetStart="@dimen/all_default_layout_offset_4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text_view_month_year_reference" />

        <LinearLayout
            android:id="@+id/layout_month_balance_description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/all_default_layout_offset_4"
            app:layout_constraintEnd_toStartOf="@id/button_add_expense"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/divider">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="8dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_circle"
                    app:tint="@color/md_theme_light_tertiary"
                    tools:ignore="ContentDescription" />

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/all_default_layout_offset_2"
                    android:layout_marginVertical="@dimen/all_default_layout_offset_4"
                    android:text="@string/current_month" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/text_view_current_month_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="@dimen/all_default_layout_offset_4"
                    android:textStyle="bold"
                    tools:text="R$ 0,00" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="8dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_circle"
                    app:tint="@android:color/holo_green_dark"
                    tools:ignore="ContentDescription" />

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_marginHorizontal="@dimen/all_default_layout_offset_2"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="@dimen/all_default_layout_offset_4"
                    android:text="@string/settled" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/text_view_current_month_settled"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="@dimen/all_default_layout_offset_4"
                    android:textStyle="bold"
                    tools:text="R$ 15,00" />
            </LinearLayout>
        </LinearLayout>

        <com.google.android.material.progressindicator.LinearProgressIndicator
            android:id="@+id/horizontal_indicator_month_balance"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/all_default_layout_offset_4"
            android:progress="40"
            app:indicatorColor="@android:color/holo_green_dark"
            app:layout_constraintEnd_toStartOf="@id/button_add_expense"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/layout_month_balance_description"
            app:trackColor="@color/md_theme_light_tertiary" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_add_expense"
            style="@style/Widget.Material3.Button.IconButton.Filled"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/all_default_layout_offset_4"
            app:icon="@drawable/ic_add"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/layout_month_balance_description" />

        <!-- TODO Analisar ideia: campo de pesquisa embaixo da toolbar, botão de pesquisa na toolbar, cancelar pesquisa na toolbar e texto pesquisado como subtitle...
        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_pesquisar"
            style="@style/Widget.Material3.Button.IconButton.Outlined"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cornerRadius="32dp"
            app:icon="@drawable/ic_search"
            app:iconGravity="textStart"
            app:iconPadding="0dp" /-->

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/text_view_resume_board_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.Material3.LabelSmall"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_margin="@dimen/all_default_layout_offset_4"
            android:textStyle="italic"
            app:layout_constraintTop_toBottomOf="@id/horizontal_indicator_month_balance"
            tools:text="Ok, tudo certo =)" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>