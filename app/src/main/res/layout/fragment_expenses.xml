<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".presentation.ui.financas.expenses.ExpensesFragment">

    <!--PAGE NAVIGATOR-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/all_default_layout_offset_8">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_previous_month"
            style="@style/Widget.Material3.Button.IconButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:icon="@drawable/ic_angle_left"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <include
            android:id="@+id/resume_board"
            layout="@layout/compenent_expenses_resume_board"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toStartOf="@id/button_next_month"
            app:layout_constraintStart_toEndOf="@id/button_previous_month" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_next_month"
            style="@style/Widget.Material3.Button.IconButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:icon="@drawable/ic_angle_right"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!--LABEL DE NENHUM REGISTRO-->
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/text_view_not_found"
        android:layout_width="match_parent"
        android:textAppearance="@style/TextAppearance.Material3.HeadlineSmall"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_margin="@dimen/all_default_layout_offset_8"
        android:text="@string/not_found"
        android:textSize="@dimen/text_size_16"
        android:textStyle="italic" />

    <!--LISTA DE REGISTROS-->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view_expenses"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:paddingTop="@dimen/all_default_layout_offset_4"
        tools:itemCount="1"
        tools:listitem="@layout/adapter_registro" />

</LinearLayout>
